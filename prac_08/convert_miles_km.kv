BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size : 48
            multiline: False
            size_hint_x: 0.8
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text:'Up'
                on_release: app.handle_increment(1)
            Button:
                text:'Down'
                on_release: app.handle_increment(-1)
    #Button:
    #    text: 'Convert miles to km'
    #    on_release: app.handle_calculate()
    Label:
        id: output_label
        text: app.message

